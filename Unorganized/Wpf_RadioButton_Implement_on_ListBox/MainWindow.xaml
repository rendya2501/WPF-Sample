<Window
    x:Class="Wpf_RadioButton_Implement_on_ListBox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf_RadioButton_Implement_on_ListBox"
    xmlns:local1="clr-namespace:Wpf_RadioButton_on_ListBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RadioButton を ListBox で実装する"
    SizeToContent="WidthAndHeight">
    <Grid>
        <local1:RadioButtonsControl
            Columns="1"
            DisplayMemberPath="Name"
            ItemsSource="{Binding}" />
    </Grid>
</Window>
